import math

class Point:
    def __init__(self, x, y):
        """Initialize a Point with coordinates x and y"""
        self.x = x
        self.y = y

    def __str__(self):
        """Return a string representation of the Point"""
        return f"Point({self.x}, {self.y})"

    def distance_to(self, other):
        """Calculate distance to another Point object"""
        if not isinstance(other, Point):
            raise TypeError("Distance can only be calculated between two Point objects.")
        dx = self.x - other.x
        dy = self.y - other.y
        return math.sqrt(dx**2 + dy**2)

# Example usage
p1 = Point(3, 4)
p2 = Point(7, 1)

print("Point 1:", p1)
print("Point 2:", p2)

# Calculate and print the distance
distance = p1.distance_to(p2)
print(f"Distance between {p1} and {p2} is {distance:.2f}")
